Container(
    layout: (
        direction: Column,
        justify_content: Start,
        align_items: Stretch,
        spacing: 20.0,
    ),
    padding: 20.0,
    flex: 1.0,
    children: [
        Label(text: "All Widgets Showcase", size: 28.0, color: (1.0, 1.0, 1.0, 1.0)),
        
        // 1. Basic Inputs
        Container(
            layout: (direction: Row, spacing: 20.0, align_items: Center),
            children: [
                Button(text: "Standard Button", action: "btn1"),
                Checkbox(id: "chk1", checked: true),
                Label(text: "Checkbox", size: 14.0),
                ToggleSwitch(id: "swt1", checked: false),
                Label(text: "Switch", size: 14.0),
            ]
        ),
        
        Divider(orientation: Horizontal),
        
        // 2. Text Inputs
        Container(
            layout: (direction: Row, spacing: 20.0, align_items: Center),
            children: [
                TextInput(id: "txt1", value: "", placeholder: "Text Input..."),
                NumberInput(id: "num1", value: 42.0),
            ]
        ),
        
        Divider(orientation: Horizontal),
        
        // 3. Selection & Pickers
        Container(
            layout: (direction: Row, spacing: 20.0, align_items: Center),
            children: [
                Dropdown(id: "drop1", options: ["Option A", "Option B", "Option C"], selected_index: Some(0)),
                DatePicker(id: "date1", value: None),
                Container(
                    layout: (direction: Row, spacing: 10.0),
                    children: [
                        RadioButton(group_id: "g1", value: "opt1", selected: true, label: "Option 1"),
                        RadioButton(group_id: "g1", value: "opt2", selected: false, label: "Option 2"),
                    ]
                )
            ]
        ),
        
        Divider(orientation: Horizontal),

